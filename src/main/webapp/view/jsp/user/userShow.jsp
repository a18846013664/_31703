<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<%@ page contentType="text/html;charset=UTF-8" language="java" %>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>艾特国际酒店</title>
    <style type="text/css">
        * {
            padding: 0px;
            margin: 0px;
        }

        body {
            background-image: url(../../../uploaddir/bg0.jpg);
        }

        table {
            margin: 0 auto;
            padding-top: 5%;
        }

        .middle {
            margin: 0 auto;
            width: 1300px;
            height: 500px;
            background-color: #d6d6d6;
            border-radius: 15px;
            margin-top: 6%;
        }

        .fh {
            float: right;
            height: 10px;
            padding-right: 50px;
            margin-top: 25px;
        }

        .fh a {
            text-decoration: none;
        }

        table {
            width: 1200px;
            height: 150px;
            border: 1px;
        }

        td {
            text-align: center;
            height: 30px;
            background-color: blanchedalmond;
        }
        a:hover{
            cursor: pointer;
        }
    </style>
</head>

<body>
<div style="width: 1366px;height: 30px;background: white;color: black">
    <a id="all" style="position: absolute;top: 5px;left: 150px;font-weight: bolder;color: black">所有</a>
    <a id="dlwy" style="position: absolute;top: 5px;left: 300px;font-weight: bolder;color: black">独立卫浴</a>
    <a id="noup" style="position: absolute;top: 5px;left: 450px;font-weight: bolder;color: black">无窗-楼上</a>
    <a id="nodown" style="position: absolute;top: 5px;left: 600px;font-weight: bolder;color: black">无窗-楼下</a>
    <a id="yesdown" style="position: absolute;top: 5px;left: 750px;font-weight: bolder;color: black">有窗-楼下</a>
    <a id="yesup" style="position: absolute;top: 5px;left: 900px;font-weight: bolder;color: black">有窗-楼上</a>
    <a id="free" style="position: absolute;top: 5px;left: 1050px;font-weight: bolder;color: black">空闲房间</a>
    <a href="/view/jsp/web.jsp" style="position: absolute;top: 5px;left: 1200px;font-weight: bolder;color: black">返回首页</a>
</div>
<div class="middle" style="overflow-x: hidden;overflow-y: scroll;opacity: 0.9">
    <div class="fh">
        <a href="/view/jsp/web.jsp">返回首页</a>
    </div>
    <table>
        <tr>
            <td>
                <div>房间号码</div>
            </td>
            <td>
                <div>房间类型</div>
            </td>
            <td>
                <div>房间价格</div>
            </td>
            <td>
                <div>房间描述</div>
            </td>
            <td>
                <div>房间状态</div>
            </td>
            <td>
                <div>操作</div>
            </td>
        </tr>
        </tbody>
        <c:forEach var="rooms" items="${room}">
            <input id="hida" type="hidden" value="${rooms.rnumber}">
            <tr>
                <td>
                    <div>${rooms.rnumber}</div>
                </td>
                <td>
                    <div>${rooms.rvarious}</div>
                </td>
                <td>
                    <div>${rooms.rprice}</div>
                </td>
                <td>
                    <div>${rooms.rintro}</div>
                </td>
                <td ><div>
                    <c:if  test="${rooms.rnow!=0}">
                        有人
                    </c:if>
                    <c:if  test="${rooms.rnow==0}">
                        无人
                    </c:if>
                </div></td>
                <td><div>
                    <c:if  test="${rooms.rnow==0}">
                        <a href="/a/show?id=${rooms.id}">显示</a>
                    </c:if>
                    <c:if  test="${rooms.rnow!=0}">
                        <a href="/a/showHave?id=${rooms.rnow}&tid=${rooms.id}">查看离店时间</a>
                    </c:if></div></td>
            </tr>
        </c:forEach>
    </table>
</div>
</div>
<script src="http://libs.baidu.com/jquery/1.7.2/jquery.min.js"></script>
<script type="text/javascript">

    $(function () {
        $("#all").click(function () {
            var rintro = document.getElementById('all').innerText;
            window.location.href="/a/order";

        })
        $("#dlwy").click(function () {
            var rintro = document.getElementById('dlwy').innerText;
            window.location.href="/a/mhppRoom?rintro="+rintro;

        })
        $("#noup").click(function () {
            var rintro = document.getElementById('noup').innerText;
            window.location.href="/a/mhppRoom?rintro="+rintro;

        })
        $("#nodown").click(function () {
            var rintro = document.getElementById('nodown').innerText;
            window.location.href="/a/mhppRoom?rintro="+rintro;
        })
        $("#yesdown").click(function () {
            var rintro = document.getElementById('yesdown').innerText;
            window.location.href="/a/mhppRoom?rintro="+rintro;
        })
        $("#yesup").click(function () {
            var rintro = document.getElementById('yesup').innerText;
            window.location.href="/a/mhppRoom?rintro="+rintro;
        })
        $("#free").click(function () {
            window.location.href="/a/free";
        })
    });


</script>
</body>

</html>